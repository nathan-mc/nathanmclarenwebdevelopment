import logo from '../assets/logo.png'
---

<nav>
  <div class="logo">
    <a href="/"><img src={logo} alt="nathan mclaren web design logo" /></a>
  </div>
  <div class="links">
    <a href="/">HOME</a>
    <a href="/aboutme">ABOUT ME</a>
